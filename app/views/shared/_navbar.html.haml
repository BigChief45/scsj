%nav.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'SCSJ', root_path, class: 'navbar-brand'
    .navbar-collapse
      %ul.nav.navbar-nav

      %ul.nav.navbar-nav.navbar-right
        - unless user_signed_in?
          %li= link_to t('devise.registrations.new.sign_up'), register_path
          %li= link_to t('devise.sessions.new.sign_in'), login_path
        - else
          %li.dropdown
            %a{ :class => 'dropdown-toggle', "data-toggle" => 'dropdown', :role => 'button', "aria-expanded" => false }
              %strong= current_user.email
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              - if can? :read, Person
                %li
                  = link_to people_path do
                    %i.fa.fa-user
                    Personas
              - if can? :create, Trial
                %li
                  = link_to new_trial_path do
                    = image_tag 'icons/application_form_add_16.png'
                    Crear Juicio
              %li.divider
              %li
                = link_to user_path(current_user) do
                  = image_tag 'icons/user_16.png'
                  Mi Perfil
              %li
                = link_to edit_user_registration_path do
                  = image_tag 'icons/cog_edit_16.png'
                  Mi Cuenta
              %li.divider
              %li
                = link_to logout_path, method: :delete do
                  = image_tag 'icons/door_out_16.png'
                  Salir