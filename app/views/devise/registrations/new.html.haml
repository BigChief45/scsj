%h2= t('.sign_up')

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!

  .form-inputs
    = f.input :email, required: true, autofocus: true
    = f.input :first_name, required: true
    = f.input :last_name, required: true
    = f.input :mobile_number, required: true
    = f.input :password, required: true
    = f.input :password_confirmation, required: true

    = f.input :roles, as: :radio_buttons, collection: Role.where.not(name: 'admin'), value_method: :name, label_method: lambda { |role| t("roles.#{role.name}") }

  .form-actions
    .text-center
      = f.button :submit, t('.sign_up'), class: 'btn btn-success'

