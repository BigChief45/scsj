.row
  .col-md-3
    .panel.panel-default
      .panel-body
        = image_tag @user.avatar.url, class: 'img-circle img-responsive center-block'

        .text-center
          %h5
            %strong= @user.full_name

          %ul.list-inline
            - @user.roles.each do |role|
              %li
                %span.label.label-default= t("roles.#{role.name}")

        %hr

        %ul.nav.nav-pills.nav-stacked
          %li.active
            %a{ 'aria-expanded': 'true', href: '#profile', 'data-toggle': 'pill', role: 'tab' }
              = image_tag 'icons/user_16.png'
              Perfil
          %li
            %a{ 'aria-expanded': 'true', href: '#trials', 'data-toggle': 'pill', role: 'tab' }
              = image_tag 'icons/books_16.png'
              Juicios
              %span.pull-right.badge= @user.trials.count
  .col-md-9
    .panel.panel-default
      .panel-body
        .tab-content
          = render 'profile'
          = render 'trials'
